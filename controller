controller
<?php
include_once("model/Model.php");
class Controller 
{
 public $model;
 public function __construct()  
    {  
  $this->model = new Model();
 } 
  public function invoke()
 {
   $reslt = $this->model->getADD();     
  if($reslt == 'ADD')
  {
   include 'view/AfterADD.php';
  }
  else
  {
   include 'view/ADD.php';
  }
  
 }
}

?>
